@page
@model BookListRazor.Pages.BookList.UpsertModel

<br />

<h2 class="text-info">
    @(Model.Book.Id!=0?"Edit":"Create") Book
</h2>
<div class="container border p-3">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        @if (Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.Author" class="form-control" />
                <div class="text-danger" asp-validation-for="Book.Author"></div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8">
                <input asp-for="Book.ISBN" class="form-control" />
                <div class="text-danger" asp-validation-for="Book.ISBN"></div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-4">
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id!=0?"Update":"Create")</button>
            </div>
            <div class="col-4">
                <a class="btn btn-success form-control" asp-page="Index">Back to Book List</a>
            </div>
        </div>

    </form>
</div>

